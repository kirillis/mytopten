.u-bg-grey-light.u-mb-5
  .container.u-py-5
    .Grid
      .Grid-cell.1-of-4--desk.u-t-align-right
      .Grid-cell.3-of-4--desk
        %h2 Register

    -if @user.errors.any?
      .Grid
        .Grid-cell.1-of-4--desk.u-t-align-right
        .Grid-cell.3-of-4--desk
          %h2
            = pluralize(@user.errors.count, "error")
            prohibited this user from being saved:

          %ul
          - @user.errors.full_messages.each do |msg|
            %li= msg

    = form_for @user, html: { class: 'Form'} do |f|
      .Grid
        .Grid-cell.1-of-4--desk.u-t-align-right
          = f.label :name
        .Grid-cell.3-of-4--desk
          = f.text_field :name, required: true, class: 'validate'

        .Grid-cell.1-of-4--desk.u-t-align-right
          = f.label :email
        .Grid-cell.3-of-4--desk
          = f.email_field :email, required: true, class: 'validate'

        .Grid-cell.1-of-4--desk.u-t-align-right
          = f.label :password
        .Grid-cell.3-of-4--desk
          = f.password_field :password, required: true, class: 'validate'

        .Grid-cell.1-of-4--desk.u-t-align-right
          = f.label :password_confirmation
        .Grid-cell.3-of-4--desk
          = f.password_field :password_confirmation, required: true, class: 'validate'

        .Grid-cell.1-of-4--desk.u-t-align-right
        .Grid-cell.3-of-4--desk
          %button{:name => "action", :type => "submit"}
            Register
            %i.material-icons send

