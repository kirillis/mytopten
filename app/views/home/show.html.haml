=content_for :page_title do
  Popular Alltime

.u-mb-2
  .container.u-py-2
    %h2.u-mb-2
      Popular tags
      = link_to tag_filter_path, title: 'Filter by tag' do
        =inline_svg('filter.svg', {class: 'Icon u-c-blue u-ml-05'})
    -if @tags
      =render partial: "tags/tag", collection: @tags
    -else
      %p No tags found.

.container
  -unless @lists.empty?
    %h2 
      Popular lists
      =link_to 'alltime', lists_popular_timeframe_path('alltime'), class: 'Button'
      =link_to 'this year', lists_popular_timeframe_path('year'), class: 'Button Button--inactive'
      =link_to 'this month', lists_popular_timeframe_path('month'), class: 'Button Button--inactive'
      =link_to 'this week', lists_popular_timeframe_path('week'), class: 'Button Button--inactive'
    .Grid
      -@lists.each do |list|
        .Grid-cell.1-of-4--desk
          =render list

    .Grid
      .Grid-cell.1-of-3--desk
        = paginate @lists

  -else
    %p No lists created yet.
