.u-bg-beta.u-mb-5
  .container.u-py-5
    .Grid
      .Grid-cell.2-of-3--desk
        %h2 Popular tags right now
        -if @tags
          =render partial: "tags/tag", collection: @tags
        -else
          %p No tags found.

.container
  %h2="All lists tagged with '#{@tag_name}'"
  .Grid
    .Grid-cell.2-of-3--desk
      -unless @lists.empty?
        =render @lists
      -else
        %p No lists created yet.
    .Grid-cell.1-of-3--desk
      %h2 Sidebar
      %p More content herer.