.u-bg-grad-mint.u-mb-5
  .container.u-py-2
    .Grid
      .Grid-cell.2-of-3--desk
        %h2 Popular tags right now
        -if @tags
          =render partial: "tags/tag", collection: @tags
        -else
          %p No tags found.

.container
  -unless @lists.empty?
    %h2
      Popular lists of 
      %span.u-color-grey-med
        =link_to 'alltime', lists_popular_timeframe_path('alltime'), class: "#{params[:timeframe] == 'alltime' ? 'u-fw-700' : 'u-color-grey-med'}"
        &ndash; 
        =link_to 'this year', lists_popular_timeframe_path('year'), class: "#{params[:timeframe] == 'year' ? 'u-fw-700' : 'u-color-grey-med'}"
        &ndash; 
        =link_to 'this month', lists_popular_timeframe_path('month'), class: "#{params[:timeframe] == 'month' ? 'u-fw-700' : 'u-color-grey-med'}"
        &ndash; 
        =link_to 'this week', lists_popular_timeframe_path('week'), class: "#{params[:timeframe] == 'week' ? 'u-fw-700' : 'u-color-grey-med'}"
    .Grid
      -@lists.each do |list|
        .Grid-cell.1-of-3--desk
          =render list
  -else
    %p No lists created yet.