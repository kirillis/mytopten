-if list.public or current_user == list.user

  -list.list_items.each_with_index do |item, index|
    -break if index > 1
    %img{:src => item.image_url}/

  %p=link_to list.title, user_list_path(list.user.name, list)
  %p=list.description
  =link_to "See List", user_list_path(list.user.name, list)
  =link_to "by #{list.user.name}", user_path(list.user.name)
  -if current_user == list.user
    =link_to 'Edit', user_list_edit_path(current_user.name, list)
%hr
