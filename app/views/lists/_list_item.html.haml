%li.List-item.Grid.u-mb-3
  .Grid-cell.1-of-4.u-t-align-right
    %p.List-itemCounter.u-fw-700=list_item_counter+1
    %a.List-itemImageLink.u-mr-2{ href: list_item.image_large_url, target: "_blank" }
      %img.List-itemImage{ src: list_item.image_thumb_url }/
  .Grid-cell.3-of-4
    %h3.List-itemTitle.u-fw-700=list_item.title
    .List-itemDescription
      =raw list_item.description
    -#=link_to "Link", list_item.link
