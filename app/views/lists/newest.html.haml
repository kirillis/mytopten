=content_for :page_title do
  Newest lists

.u-mb-2
  .container.u-py-2
    .Grid
      .Grid-cell
        %h2.u-mb-2
          Popular tags
          = link_to tag_filter_path, title: 'Filter by tag' do
            =inline_svg('filter.svg', {class: 'Icon u-ml-05'})

        -if @tags
          =render partial: "tags/tag", collection: @tags
        -else
          %p No tags found.

.container
  -unless @lists.empty?
    %h2 
      Newest lists
    .Grid
      -@lists.each do |list|
        .Grid-cell.1-of-2--handheld-and-up.1-of-4--desk
          =render list

    .Grid
      .Grid-cell
        = paginate @lists

  -else
    %p No lists created yet.